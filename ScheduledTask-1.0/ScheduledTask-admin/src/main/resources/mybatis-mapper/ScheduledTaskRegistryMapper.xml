<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaohe.ScheduledTask.admin.dao.ScheduledTaskRegistryMapper">
    <resultMap id="ScheduledTaskRegistry" type="com.xiaohe.ScheduledTask.admin.core.model.ScheduledTaskRegistry" >
        <result column="id" property="id" />
        <result column="registry_group" property="registryGroup" />
        <result column="registry_key" property="registryKey" />
        <result column="registry_value" property="registryValue" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    <sql id="Base_Column_List">
        t.id,
		t.registry_group,
		t.registry_key,
		t.registry_value,
		t.update_time
    </sql>


    <select id="findDead" resultType="java.lang.Integer">
        SELECT t.id
        FROM scheduled_task_registry AS t
        WHERE t.update_time <![CDATA[ < ]]> DATE_ADD(#{nowTime},INTERVAL -#{timeout} SECOND)
    </select>

    <delete id="removeDead">
        DELETE
        FROM scheduled_task_registry
        WHERE id IN
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>

    </delete>

    <select id="findAll" parameterType="java.util.HashMap" resultMap="ScheduledTaskRegistry">
        SELECT
        <include refid="Base_Column_List"/>
        FROM scheduled_task_registry AS t
        WHERE t.update_time <![CDATA[ > ]]> DATE_ADD(#{nowTime},INTERVAL -#{timeout} SECOND)
    </select>

    <delete id="registryDelete" parameterType="java.util.HashMap" >
        DELETE FROM scheduled_task_registry
        WHERE registry_group = #{registryGroup}
            AND registry_key = #{registryKey}
            AND registry_value = #{registryValue}
    </delete>

    <update id="registryUpdate" parameterType="java.util.HashMap">
        UPDATE scheduled_task_registry
        SET `update_time` = #{updateTime}
        WHERE `registry_group` = #{registryGroup}
            AND `registry_key` = #{registryKey}
            AND `registry_value` = #{registryValue}
    </update>

    <insert id="registrySave" parameterType="java.util.HashMap">
        INSERT INTO xxl_job_registry( `registry_group` , `registry_key` , `registry_value`, `update_time`)
        VALUES( #{registryGroup}  , #{registryKey} , #{registryValue}, #{updateTime})
    </insert>

</mapper>